<div class="container">

  <div class="row">
    <div class="col-lg-5">
      <h3>Shipping Address</h3>
    </div>
  </div>


  <%= simple_form_for @shipping_address do |f| %>
    <%= render '/shared/error_messages', model: @shipping_address %>

    <div class="row">
      <div class="col-lg-1">
        <%= f.label :name %>
      </div>

      <div class="col-lg-4">
        <%= f.input :name, as: :string, label: false, required: true , :input_html => { :size => 60, :class => 'input-text' } %>
      </div>
    </div>

    <div class="row">
      <div class="col-lg-1">
        <%= f.label :email %>
      </div>

      <div class="col-lg-4">
        <%= f.input :email, as: :string, label: false, required: false, :input_html => { :size => 40, :class => 'input-text' } %>
      </div>
    </div>

    <div class="row">
      <div class="col-lg-1">
        <%= f.label :street %>
      </div>

      <div class="col-lg-4">
        <%= f.input :street, as: :string, label: false, required: true, :input_html => { :size => 60, :class => 'input-text' } %>
      </div>
    </div>

    <div class="row">
      <div class="col-lg-1">
        <%= f.label :zip_code %>
      </div>

      <div class="col-lg-4">
        <%= f.input :zip_code, label: false, required: true, :input_html => { :size => 60, :class => 'input-text' } %>
      </div>
    </div>

    <div class="row">
      <div class="col-lg-1">
        <%= f.label :country %>
      </div>

      <div class="col-lg-4">
        <%= f.input :country, as: :string, label: false, required: true, :input_html => { :size => 60, :class => 'input-text' } %>
      </div>
    </div>

    <div class="row">
      <div class="col-lg-4">
        <%= link_to "Back", carts_path, class: "btn btn-secondary btn-xs" %>
        <%= f.button :submit, 'Next', class: 'btn btn-primary btn-xs' %>
      </div>
    </div>

  <% end  %>





</div>